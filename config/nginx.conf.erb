worker_processes 1;
events { worker_connections 1024; }

http {
  default_type  application/octet-stream;

  sendfile        on;
  keepalive_timeout  65;

  server {
    listen <%= ENV["PORT"] %>;

    root /app/dist;

    index index.html;

    location / {
      try_files $uri /index.html;
    }

    location ~* \.(?:ico|css|js|gif|jpe?g|png|woff2?|eot|ttf|svg)$ {
      expires 1y;
      add_header Cache-Control "public";
    }
  }
}
